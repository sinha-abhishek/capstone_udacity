<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_goal_detail_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abhishek.android.habitnme.GoalDetailView"
    tools:showIn="@layout/activity_goal_detail_view"
    android:layout_marginTop="80dp"
    android:paddingTop="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <!--TODO dropdown -->
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="xyzxxzz"
            android:id="@+id/goal_name_detail"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="10%"
            android:id="@+id/goal_progress_detail"/>
    </LinearLayout>
    <com.squareup.timessquare.CalendarPickerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/calendar_select"/>

</LinearLayout>
