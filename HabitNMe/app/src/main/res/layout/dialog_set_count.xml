<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goal_description"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        style="@style/Base.TextAppearance.AppCompat.Body1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number_seeter"
        android:visibility="visible"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="match_parent"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:gravity="start|center"
            android:focusable="true"
            android:text="@string/set_number_text"
            />
        <NumberPicker
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:focusable="true"
            android:contentDescription="@string/set_day_count"
            android:layout_height="match_parent"
            android:id="@+id/goal_current_number"
            />
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_setcount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:focusable="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:padding="12dp"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:contentDescription="@string/done_for_day_mark"
        android:text="@string/done_text"/>
    </LinearLayout>
</ScrollView>