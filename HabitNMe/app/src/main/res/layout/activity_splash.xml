<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F6AE6"
    tools:context="com.abhishek.android.habitnme.SplashActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/activity_splash"
        app:layout_constraintLeft_toLeftOf="@+id/activity_splash"
        app:layout_constraintRight_toRightOf="@+id/activity_splash"
        app:layout_constraintTop_toTopOf="@+id/activity_splash" />

</android.support.constraint.ConstraintLayout>
